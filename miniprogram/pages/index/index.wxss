/* 作者栏 */
.author-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
}
.author-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.author-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
}
.author-tip {
  font-size: 22rpx;
  color: #999;
}

/* 统计数据 */
.stat-box {
  display: flex;
  gap: 20rpx;
}
.stat-item {
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
  background: #f8f9fa;
  padding: 6rpx 16rpx;
  border-radius: 99rpx;
}

/* BGM 卡片 */
.music-card {
  margin-top: 20rpx;
  background: #FDF2F8; /* 浅粉色背景 */
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  border: 1rpx solid rgba(217, 77, 148, 0.1);
}
.music-cover {
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  background: #fff;
}
.music-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.music-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #D94D94; /* 主题色 */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.music-author {
  font-size: 22rpx;
  color: rgba(217, 77, 148, 0.6);
}
.music-btn {
  font-size: 24rpx;
  background: #D94D94;
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

/* 标签云 */
.tags-row {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}
.tag-item {
  font-size: 22rpx;
  color: #1f7bff; /* 蓝色标签 */
  background: rgba(31, 123, 255, 0.08);
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
}

