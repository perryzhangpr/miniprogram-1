page { margin: 0; padding: 0; }

.page{
  min-height: 100vh;
  padding-bottom: 200rpx;
  box-sizing: border-box;

  /* ✅ 整页背景渐变：蓝 -> 灰（你要更柔就调 36%/56%） */
  background: linear-gradient(
    to bottom,
    #4C65E0 0%,
    #A162DD 16%,
    #f2f3f5 56%,
    #f2f3f5 100%
  );
}

/* 顶部装饰（不负责背景色） */
.hero{
  position: relative;
  padding: 0 28rpx;
  overflow: hidden;
}

.nav-spacer{ width: 100%; }

.hero-sheen{
  position: absolute;
  top: -240rpx;
  right: -280rpx;
  width: 900rpx;
  height: 560rpx;
  background: rgba(255,255,255,0.14);
  transform: rotate(18deg);
  border-radius: 90rpx;
}

.title{
  margin-top: 100rpx;
  margin-bottom: 26rpx;
  position: relative;
  padding: 0 10rpx;
}

.t1{
  display: block;
  font-size: 44rpx;
  font-weight: 900;
  color: #fff;
  letter-spacing: 2rpx;
}

.t2{
  display: block;
  margin-top: 14rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255,255,255,0.92);
}

/* ✅ 卡片位置：只调这里即可“压在渐变中点” */
.card{
  margin: 0 10rpx;
  margin-top: 60rpx;      /* ← 往下压就加大 */
  margin-bottom: 18rpx;

  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 14rpx 40rpx rgba(199, 199, 199, 0.199);
}

.input-wrap{ position: relative; }

.input{
  width: 100%;
  min-height: 170rpx;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #999999;

  background: #f2f3f5;   /* ✅ 灰色背景 */
  border-radius: 24rpx;  /* ✅ 圆角 */
  padding: 30rpx 30rpx;  /* ✅ 内边距 */
  box-sizing: border-box;

  max-height: 220rpx;
  overflow: auto;
}

.ph{ color: rgba(170,170,170,0.85); }

.clear{
  position: absolute;
  right: 0;
  bottom: -6rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: rgba(140,140,140,0.95);
}

.btn-row{
  margin-top: 24rpx;
  display: flex;
  gap: 18rpx;
}

.btn{
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
}

.btn-gray{
  width: 240rpx;
  background: #eeeeee;
  color: #333;
}

.btn-blue{
  flex: 1;
  background: #D94D94;
  color: #fff;
}

.btn-ico{
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.btn-blue-txt{
  font-size: 30rpx;
  font-weight: 800;
}

/* 内容区 */
.content{
  padding: 0 28rpx 0 28rpx;
}

/* 解析结果区 */
.result-wrap{
  margin-top: 18rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 10rpx 26rpx rgba(0,0,0,0.06);
}

.result-head{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}

.result-title{
  font-size: 30rpx;
  font-weight: 900;
  color: #222;
}

.result-action{
  font-size: 26rpx;
  color: #1f7bff;
  font-weight: 700;
}

.video{
  width: 100%;
  height: 360rpx;
  border-radius: 14rpx;
  overflow: hidden;
}

.img-grid{
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12rpx;
}

.img-item{
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

.declare{
  margin-top: 560rpx;   /* 需要更靠上/下就调这个 */
  padding: 0 28rpx;
  display: flex;
  justify-content: center;
}

.declare-text{
  font-size: 22rpx;
  line-height: 36rpx;
  color: rgb(204, 204, 204);
  text-align: center;
}


/* 加载遮罩 */
.mask{
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
}

.mask-card{
  width: 260rpx;
  padding: 28rpx 20rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.spinner{
  width: 46rpx;
  height: 46rpx;
  border-radius: 999rpx;
  border: 6rpx solid rgba(31,123,255,0.2);
  border-top-color: rgba(31,123,255,1);
  animation: spin 0.9s linear infinite;
}

@keyframes spin{ to { transform: rotate(360deg); } }

.mask-text{
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #333;
}

/* 底部 tabbar */
.tabbar{
  position: fixed;
  left: 0; right: 0; bottom: 0;
  background: #fff;
  border-top: 1rpx solid rgba(0,0,0,0.06);
  z-index: 10;
}

.tab{
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  width: 50%;
  float: left;
}

.tab-ico{ width: 44rpx; height: 44rpx; }

.tab-txt{
  font-size: 22rpx;
  color: rgba(170,170,170,1);
}

.tab-on{
  color: #D94D94;
  font-weight: 800;
}

.safe{ clear: both; width: 100%; }


.detail{
  margin: 20rpx 10rpx 0 10rpx;
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 14rpx 40rpx rgba(199, 199, 199, 0.199);
}

.detail-top{
  display:flex;
  align-items:center;
  justify-content:space-between;
  margin-bottom: 24rpx;
}

.ok{
  display:flex;
  align-items:center;
  gap: 10rpx;
}

.ok-dot{
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align:center;
  border-radius: 8rpx;
  background: #20c997;
  color:#fff;
  font-weight:900;
  font-size: 24rpx;
}

.ok-text{
  font-size: 28rpx;
  font-weight: 900;
  color:#111;
}

.mini-btn{
  font-size: 24rpx;
  padding: 10rpx 14rpx;
  border-radius: 12rpx;
  background: rgba(15, 54, 107, 0.12);
  color: #1f7bff;
  font-weight: 700;
}

.player{
  width: 100%;
  height: 360rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #000;
}

.meta{
  margin-top: 14rpx;
}

.meta-row{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap: 12rpx;
}

.meta-title{
  font-size: 28rpx;
  font-weight: 900;
  color:#111;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.meta-desc{
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: rgba(90,90,90,1);
}

/* ✅ 灰色文案框：点击复制 + 更高一些（只改这里） */
.desc-box{
  margin-top: 24rpx;
  background:#f2f3f5;
  border-radius: 24rpx;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}


.desc-text{
  font-size: 24rpx;
  line-height: 36rpx;
  color: rgba(90,90,90,1);

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;    /* ✅ 想更多行就改大 */
  overflow: hidden;
}


.mini-btn{
  background: rgba(217, 77, 148, 0.12);
  color: #D94D94;
}

.meta-actions{
  margin-top: 12rpx;
  display:flex;
  gap: 12rpx;
}

.bottom-actions{
  margin-top: 24rpx;
  display:flex;
  gap: 12rpx;
}

.bbtn{
  flex: 1;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
}

.bbtn-ghost{
  background: #f1f3f5;
  color:#222;
}

.bbtn-main{
  background: #D94D94;
  color:#fff;
}

.bbtn::after{ border:none; }

/* 图文网格（如果你已有可忽略） */
.img-grid{
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12rpx;
}

.img-item{
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

